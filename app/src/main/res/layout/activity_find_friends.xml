<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindFriends">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingRight="4dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"

        android:layout_marginLeft="8dp"
        android:id="@+id/addfriendsearch"
        android:orientation="horizontal"

        android:layout_marginStart="8dp">

        <EditText
            android:id="@+id/addfriendsearchview"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="50dp"
            android:hint=" search here"
            android:queryHint="Enter email id"
            android:textSize="26sp" />

        <Button
            android:id="@+id/addfriendsearchbutton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:text="Search"
            android:background="@android:color/transparent"
             />
    </LinearLayout>

    <!--<android.support.v7.widget.RecyclerView
        android:id="@+id/addfriendrecycler"
        android:layout_below="@id/addfriendsearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"/>-->
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/addfriendsearch"
        android:id="@+id/addfriendslist"/>
</RelativeLayout>